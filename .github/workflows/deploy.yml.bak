name: Build and Deploy

on:
    push:
        branches: [main, master]

jobs:
    build:
        runs-on: ubuntu-latest
        name: build

        steps:
            - name: Checkout code
              uses: actions/checkout@v4

            # 安装 pnpm
            - name: Set up pnpm
              uses: pnpm/action-setup@v4
              with:
                  run_install: false

            # 设置 Node.js 版本
            - name: Set up Node.js
              uses: actions/setup-node@v5
              with:
                  node-version: 23.9.0
                  cache: pnpm

            - name: set env
              run: |
                  echo '${{ secrets.ENV }}' > /home/runner/work/orange/orange/.env

            - name: Install dependencies and build
              run: |
                  pnpm install --frozen-lockfile
                  pnpm rebuild better-sqlite3
                  pnpm run build --if-present

            - name: Set up SSH
              run: |
                  mkdir -p ~/.ssh
                  echo "${{ secrets.SSH_PRIVATE_KEY }}" > ~/.ssh/id_rsa
                  chmod 600 ~/.ssh/id_rsa
                  ssh-keyscan -H ${{ secrets.SSH_HOST }} >> ~/.ssh/known_hosts
              env:
                  SSH_HOST: ${{ secrets.SSH_HOST }}

            - name: Upload build to server
              run: |
                  rsync -avz \
                    /home/runner/work/orange/orange/.output \
                    /home/runner/work/orange/orange/ecosystem.config.cjs \
                    /home/runner/work/orange/orange/pnpm-lock.yaml \
                    /home/runner/work/orange/orange/package.json \
                    ${{ secrets.SSH_USER }}@${{ secrets.SSH_HOST }}:/home/${{ secrets.SSH_USER }}/orange
              env:
                  SSH_PRIVATE_KEY: ${{ secrets.SSH_PRIVATE_KEY }}

    deploy:
        runs-on: ubuntu-latest
        name: deploy
        needs: build

        steps:
            - name: Set up SSH
              run: |
                  mkdir -p ~/.ssh
                  echo "${{ secrets.SSH_PRIVATE_KEY }}" > ~/.ssh/id_rsa
                  chmod 600 ~/.ssh/id_rsa
                  ssh-keyscan -H ${{ secrets.SSH_HOST }} >> ~/.ssh/known_hosts
              env:
                  SSH_HOST: ${{ secrets.SSH_HOST }}

            - name: deploy on server
              run: |
                  ssh ${{ secrets.SSH_USER }}@${{ secrets.SSH_HOST }} << 'ENDSSH'

                  export PATH="/home/${{ secrets.SSH_USER }}/.nvm/versions/node/v23.9.0/bin:$PATH"

                  cd /home/${{ secrets.SSH_USER }}/orange

                  /home/${{ secrets.SSH_USER }}/.local/share/pnpm/pnpm install --frozen-lockfile
                  /home/${{ secrets.SSH_USER }}/.local/share/pnpm/pnpm rebuild better-sqlite3

                  if ! /home/${{ secrets.SSH_USER }}/.local/share/pnpm/pm2 list | grep -q 'orange'; then
                    echo "🟢 'orange' 服务未运行，正在启动..."
                    /home/${{ secrets.SSH_USER }}/.local/share/pnpm/pm2 start ecosystem.config.cjs --env .env
                  else
                    echo "🟡 'orange' 服务已在运行，正在重启..."
                    /home/${{ secrets.SSH_USER }}/.local/share/pnpm/pm2 restart orange
                  fi

                  ENDSSH
              env:
                  SSH_PRIVATE_KEY: ${{ secrets.SSH_PRIVATE_KEY }}
